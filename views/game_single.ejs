<!DOCTYPE html>
<html lang="en">
  <head>
    
    <% include partials/head.ejs %>
    <% include partials/scripts.ejs %>
    <% include partials/header.ejs %>

  </head>
  <body>

    <div id="hero-image-single" style="background-image: url('/images/<%= game.hero_image %>')">
        <h1 id="hero-title"><%= title %></h1>
    </div>
    
    <div class="content-padding clearfix">
      <div class="poster-wrapper">
        <img src="/images/<%= game.poster %>" class="img-responsive">
      </div>

      <div class="description-wrapper">
        <div class="description">
          <h2 class="game-header">Description</h2>
          <p><%= game.description %></p>

          <div class="main-characters">
            <h2 class="game-header">Main Characters</h2>
            <ul>
              <% for (var i = 0; i < main_characters.length; i += 1) { %>
                <li><%= main_characters[i] %></li>
              <% } %>
            </ul>
          </div>

        </div>
      </div>
    </div>

    <% include partials/footer.ejs %>    
  </body>
</html>