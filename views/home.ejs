<!DOCTYPE html>
<html lang="en">
  <head>
    
    <% include partials/head.ejs %>
    <% include partials/scripts.ejs %>
    <% include partials/header.ejs %>
    

  </head>
  <body>

    <div id="hero-image">
        <h1 id="hero-title"><%= title %></h1>
    </div>
    
    <div id="posters-wrapper" class="content-padding clearfix">

        <% for (var i = 0; i < games.length; i += 1) { %>
            <div class="poster">

                <a href="/gta_game_number/<%= games[i].game_number %>">
                    <img src="/images/<%= games[i].poster %>" class="img-responsive">

                    <div class="poster-info-overlay">
                        <h3><%= games[i].title %></h3>
                        <h4> View More <i class="fa fa-arrow-right"></i></h4>
                    </div>
                </a>
            </div>
        <% } %>

    </div>

    <% include partials/footer.ejs %>
  </body>
</html>